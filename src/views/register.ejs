<!DOCTYPE html>
<html lang="pt-pt">
<head>
    <%- include('partials/head.ejs')  %>
</head>
<body>
    <h1><%= title  %></h1>

    <%- include('partials/navbar.ejs')  %>

    <% if (typeof message !== 'undefined') { %>
       <%= message %>
   <% } %>


    <form action="/register/add" method="post">
        <div>
            <label for="">Nome</label>
            <input type="text" name="name" placeholder="Digite o seu nome" id="">
        </div>

        <div>
            <label for="">Idade</label>
            <input type="number" name="age" placeholder="Digite a sua idade"  id="">
        </div>

        <div>
            <label for="">E-mail</label>
            <input type="email" name="email" placeholder="Digite o seu email" id="">
        </div>

        <div>
            <label for="">Senha</label>
            <input type="password" name="password" placeholder="Digite a sua senha" id="">
        </div>

        
        <button type="submit">Cadastrar</button>
    </form>

    <%- include('partials/foot.ejs')  %>
</body>
</html>