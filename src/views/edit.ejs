<!DOCTYPE html>
<html lang="pt-pt">
<head>
    <%- include('partials/head.ejs')  %>
</head>
<body>
    <h1><%= title  %></h1>

    <%- include('partials/navbar.ejs')  %>

    <% if (typeof message !== 'undefined') { %>
       <%= message %>
   <% } %>


    <form action="/edit/<%=user._id %>" method="post">
        <div>
            <label for="">Nome</label>
            <input type="text" name="name" placeholder="Digite o seu nome" value="<%= user.name %>" id="">
        </div>

        <div>
            <label for="">Idade</label>
            <input type="number" name="age" placeholder="Digite a sua idade" value="<%= user.age %>" id="">
        </div>

        <div>
            <label for="">E-mail</label>
            <input type="email" name="email" placeholder="Digite o seu email" value="<%= user.email %>" id="">
        </div>

        
        <button type="submit">Editar</button>
    </form>

    <%- include('partials/foot.ejs')  %>
</body>
</html>